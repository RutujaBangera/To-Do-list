#!groovy

pipeline {
  agent any
  stages {
    stage('Workspace Cleanup') {
      steps {
        // Clean before build
        cleanWs()
        echo 'cleaning workspace...'
      }
    }
    stage('Checkout Git Branch') {
      steps {
        git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/RutujaBangera/To-Do-list.git'
      }
    }
    stage('Build Application') {
    steps {
        // Install dependencies
        sh 'python3 -m pip install --upgrade pip'
        sh 'pip3 install -r requirements.txt'

        // Run a quick Flask check
        sh 'python3 -c "from main import app; print(app)"'

        // Optional: Run tests if available
        sh 'python3 -m unittest discover || echo "No tests found"'
    }
}

    }
  }
